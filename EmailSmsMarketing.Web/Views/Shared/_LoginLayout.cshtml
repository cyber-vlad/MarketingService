<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EmailSmsMarketing</title>
    <meta content="Themesbrand" name="author">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EmailSmsMarketing.Web.styles.css" asp-append-version="true" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">


    @Html.Partial("~/Views/Shared/DevExtreme/_DevExtremeStyle.cshtml")
    @Html.Partial("~/Views/Shared/DevExtreme/_DevExtremeScripts.cshtml")


    <!-- Bootstrap Css -->
    <link href="/assets/css/bootstrap.min.css" rel="stylesheet" asp-append-version="true">
    <link href="/assets/css/bootstrap.min.css" rel="stylesheet">
    <!-- Icons Css -->
    <link href="/assets/css/icons.min.css" rel="stylesheet" asp-append-version="true">
    <!-- App Css-->
    <link href="/assets/css/app.min.css" rel="stylesheet" asp-append-version="true">
    <!-- SweetAlert Css -->
    <link href="/assets/libs/sweetalert2/sweetalert2.min.css" rel="stylesheet">
    <!-- Toaster -->
    <link href="/css/toastr.min.css" id="app-style" rel="stylesheet" asp-append-version="true">
    <!-- ISESM Css -->
    <link href="/css/isesmCustom.css" id="app-style" rel="stylesheet" asp-append-version="true">

    <!-- Notification Style-->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <!--EyeOpen Style-->
    <link rel="stylesheet" href="https://cdn3.devexpress.com/jslib/22.2.3/css/dx.light.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

  


</head>
<body class="authentication-bg">
<style>
    .dx-texteditor-container div.dx-texteditor-buttons-container,
    input:-webkit-autofill,
    input:-webkit-autofill:hover,
    input:-webkit-autofill:focus,
    input:-webkit-autofill:active {
        -webkit-box-shadow: 0 0 0px 1000px #e8f0fe inset;
    }
</style>

    @if (TempData["ErrorMessage"] != null)
    {
        <script>
            $(document).ready(function () {
                toastr.error('@TempData["ErrorMessage"]');
            });
        </script>
    }

    <div class="account-pages d-flex flex-column justify-content-center align-items-center" style="margin-top: 100px;">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="text-center">
                        <img src="/assets/images/email.svg" alt="" height="60" class="mb-5">
                    </div>
                </div>
            </div>
            <div class="row align-items-center justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="card">
                        <div class="card-body p-4">
                            <div class="text-center mt-2">
                                <h5 style="color:#5b73e8">@ViewData["TitlePage"]</h5>
                            </div> 
                            <div class="text-center" style="font-size:13px; color:#7c8a96">@ViewData["Description"]</div>
                           

                                @RenderBody()
                        
                        </div>
                    </div>
                <div class="mt-5 text-center">
                    <a class="footer-style" href="https://intelectsoft.md/ro/email-sms-marketing/" target="_blank">
                        © <script>document.write(new Date().getFullYear())</script> Email SMS Marketing. Powered by Intelectsoft
                    </a>
                </div>               
                </div>
            </div>
        </div>
    </div>

    <!-- JAVASCRIPT -->
    <script src="/assets/libs/bootstrap/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="/assets/libs/metismenu/metisMenu.min.js" asp-append-version="true"></script>
    <script src="/assets/libs/simplebar/simplebar.min.js" asp-append-version="true"></script>
    <script src="/assets/libs/node-waves/waves.min.js" asp-append-version="true"></script>
    <script src="/assets/libs/waypoints/lib/jquery.waypoints.min.js" asp-append-version="true"></script>
    <script src="/assets/libs/jquery.counterup/jquery.counterup.min.js" asp-append-version="true"></script>
    <script src="/assets/libs/sweetalert2/sweetalert2.min.js" asp-append-version="true"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

   
</body>
</html>
